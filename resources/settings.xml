			<group id="1">
                <setting id="retroarch_exec_path" type="path" label="30101" help="">
					<default/>
					<constraints>
						<sources>
							<source/>
						</sources>
						<writable>false</writable>
						<allowempty>true</allowempty>
					</constraints>
					<control type="button" format="path">
						<heading>30101</heading>
					</control>
                </setting>
                <setting id="retroarch_cores_dir" type="path" label="30102" help="">
					<level>0</level>
					<default/>
					<constraints>
						<sources>
							<source/>
						</sources>
						<writable>false</writable>
						<allowempty>true</allowempty>
					</constraints>
					<control type="button" format="path">
						<heading>30102</heading>
					</control>
                </setting> 
                <setting id="retroarch_system_dir" type="path" label="30103" help="">
					<level>0</level>
					<default/>
					<constraints>
						<sources>
							<source/>
						</sources>
						<writable>false</writable>
						<allowempty>true</allowempty>
					</constraints>
					<control type="button" format="path">
						<heading>30103</heading>
					</control>
                </setting>
